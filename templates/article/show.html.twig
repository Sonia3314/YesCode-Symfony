{% extends "base.html.twig" %}


{% block title %}
	{{article.title}}
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="my-5 text-center">
			{{article.title}}
		</h1>

		<span class="text-left">Ecrit le :
			{{ article.createdAt | date('d/m/Y à H:i') }}
		</span>
		<div>
			<a href="{{ path('article_edit', {'slug': article.slug})}}" class="btn btn-info mx-2">
				Modifier l'article
				<i class="fa fa-pen"></i>
			</a>

			<form class="d-inline" action="{{ path('article_delete' , {'slug': article.slug } ) }}" 
                onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet article?');">
				<button class="btn btn-danger mx-2">
					Supprimer l'article
					<i class="fa fa-trash"></i>
				</button>
			</form>
	<p class="my-2 border p-2">{{article.intro}}</p>

	<img width="450" src="{{article.image}}" alt="photo de l'article {{article.title}}">
		<hr>
		{{article.content | raw }}
		<hr>
		</div>
	</div>
    
</div>{% endblock %}
