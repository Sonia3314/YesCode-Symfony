{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div
		class="example-wrapper">
		<h1>Hello
		{# Cette variable est de type string donc on peut l'afficher directement #}
			{{ name }}! ✅</h1>
		<p>Ecrit par :
			{{ auteur }}
		</p>
		<h2>
        {# Article est un objet issu de la classe std donc pour accéder à sa propriété #}
			{{ article.title }}
        </h2>
        <p> {{ article.intro }}</p>
        <p> {{ article.content }}</p>
	</div>
{% endblock %}
