{% extends 'base.html.twig' %}

        {% set articles = {

        symfony : {"title" : "symfony", "intro": "Symfony est un framework PHP complet", "author": "Fabien Potencier", "picture": "https://neo7.fr/wp-content/uploads/2018/01/symfony-logo.png"},


		angular : {"title" : "angular", "intro": "Angular le framework de Google", "author": "Angus Lard", "picture": "https://angular.io/assets/images/logos/angular/angular.svg"} ,


		laravel : {"title" : "laravel", "intro": "Laravel est un framework PHP aussi", "author": "Lara Velle", "picture": "https://jf-blog.fr/wp-content/uploads/2018/07/laravel-logo.png"} 
        } 
        %}

{% block title %} Accueil {% endblock %}

{% block body %}

<div class="container">
    <div class="jumbotron text-center my-5 shadow">
        <h1 class="display-4">Bienvenue sur YesCode !</h1>
        <p class="lead">Ici ça parle de code, langages et technos de demain </p>
        <hr class="my-4">
        <p>Retrouvez nos derniers articles sur les technos les plus hype du moment !</p>
        <p class="lead">
		<a class="btn btn-primary btn-lg shadow" href="#" role="button">  &lt;/&gt; Actualités &lt;/&gt; </a>
        </p>
    </div>
    <h2 class="text-center h1">Les derniers articles</h2>
    <div class="row">

        <div class="col-4">
            <div class="card bg-light my-5 shadow">
                <h3 class="card-header">{{articles.symfony.title | title }}</h3>
                <img height="350px"  src={{articles.symfony.picture}} alt="Card image">
                <div class="card-body">
				<p class="card-text">{{articles.symfony.intro}}</p>
				<a href="#" class="btn btn-primary rounded">Lire la suite</a>
				<div class="my-3">
					<a href="#" class="card-link">{{articles.symfony.author}}</a>
				</div>
                </div>
                <div class="card-footer text-muted">
				Il y a 3 jours
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card bg-light my-5 shadow">
                <h3 class="card-header">{{articles.angular.title | title}}</h3>
                <img height="350px"  src={{articles.angular.picture}} alt="Card image">
                <div class="card-body">
                <p class="card-text">{{articles.angular.intro}}</p>
                <a href="#" class="btn btn-primary rounded">Lire la suite</a>
                <div class="my-3">
                    <a href="#" class="card-link">{{articles.angular.author}}</a>
                </div>
                </div>
                <div class="card-footer text-muted">
                Il y a 3 jours
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card bg-light my-5 shadow">
                <h3 class="card-header">{{articles.laravel.title | title}}</h3>
                <img height="350px"  src={{articles.laravel.picture}} alt="Card image">
                <div class="card-body">
                <p class="card-text">{{articles.laravel.intro}}</p>
                <a href="#" class="btn btn-primary rounded">Lire la suite</a>
                <div class="my-3">
                    <a href="#" class="card-link">{{articles.laravel.author}}</a>
                </div>
                </div>
                <div class="card-footer text-muted">
                Il y a 3 jours
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
        







        

