{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}
	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
</style>

<div class="example-wrapper">
	<h1>Hello
		{{ name }}
    </h1>

    {% set item = {"nom" : "Pomme", "forme": "ronde", "poids": 200, "couleur": "verte"} %}
    <p>Name: {{ item.nom}} </p>
    <p>Shape: {{ item.forme}} </p>
    <p>Weight: {{ item.poids}} g. </p>
    <p>Color: {{ item.couleur}} </p>
</div>


{% endblock %}